function predictor_form_submit($form, &$form_state) {
	$archive = $form_state['values']['archive'];

	switch ($archive) {
	    case 0:
	        save_uploaded_file('league',$form_state);
	        break;
	    case 1:
	        save_uploaded_file('corners',$form_state);
	        break;
	    case 2:
	        insert_leagule_archive();
	        break;
	   case 3:
	        insert_yc_archive();
	        break;
	}
}



